# Environment Configuration for Healthcare RAG API
# Copy this file to .env and update with your values

# API Settings
API_TITLE="Healthcare RAG API"
API_VERSION="1.0.0"

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Device Settings
FORCE_CPU=0  # Set to 1 to force CPU (useful for debugging)

# Data Settings
SAMPLE_SIZE=5000  # Number of samples to load from each dataset

# Cache Settings (Fix issue #6: avoid rebuilding indices every time)
ENABLE_CACHE=1  # Set to 1 to enable index caching (recommended for production)

